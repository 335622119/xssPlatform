<div class="modal fade" id="addProjectDiv" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" >
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">添加项目</h4>
      </div>
      <div class="modal-body">
        <form role="form" id="addProjectForm" method="post" action="addProject">
          <div class="box-body">
            <div class="form-group" id="projectNameDiv">
              <label for="projectName" id="projecttitle">项目名称</label>
              <label id="projectAlert" style="float: right"></label>
              <input type="text" class="form-control" id="projectName" placeholder="Enter project name" name="projectName" onblur="verifyName('project');">
            </div>
            <div class="form-group">
              <label for="projectIntroduce">项目简介</label>
              <input type="text" class="form-control" id="projectIntroduce" placeholder="Enter project Introduce" name="projectIntro">
            </div>
            <!-- plugin list -->
            <% pluginList.forEach(function (plugin){ %>
            <div class="checkbox">
              <label for="<%=plugin.name %>">
                <input type="checkbox" class="plugins_num" id="<%=plugin.name %>" name="pluginName" value="<%=plugin.name %>"><strong><%=plugin.name %></strong>(<small><%=plugin.introduce %></small>)
              </label>
            </div>
            <% }); %>
          </div><!-- /.box-body -->
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="addProject('/addDynamicProject');">Save changes</button>
      </div>
    </div>
  </div>
</div>